# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index
# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# Map for UserController(/user)
POST    /user/login                 controllers.UserController.login
GET     /user/login                 controllers.UserController.loginPage


GET     /user/logout                controllers.UserController.logout

POST    /user/register              controllers.UserController.register
GET    /user/register              controllers.UserController.registerPage

GET     /user/find                  controllers.UserController.findUserPage
POST    /user/find/id               controllers.UserController.findId

#POST    /user/carts                 controllers.UserController.addCart
GET     /user/carts                 controllers.UserController.cartList
#POST    /user/addresses             controllers.UserController.addAddress
#GET     /user/addresses             controllers.UserController.addressList

# Map for SellerController(/seller)
GET     /seller                       controllers.SellerController.index

# reqeust: userId, userPw => response: boolean
POST    /seller/login                 controllers.SellerController.login
GET     /seller/login                 controllers.SellerController.loginPage

GET     /seller/logout                controllers.SellerController.logout

POST    /seller/register              controllers.SellerController.register
GET    /seller/register              controllers.SellerController.registerPage

GET     /seller/find                  controllers.SellerController.findSellerPage
POST    /seller/find/id               controllers.SellerController.findId

POST    /seller/product                 controllers.SellerController.addProduct
GET     /seller/product                 controllers.SellerController.getProducts
GET     /seller/product/register        controllers.SellerController.productRegisterPage
POST    /seller/product/register        controllers.SellerController.addProduct

#GET     /seller/product/detail          controllers.SellerController.productDetail(product: dto.ProductDto)

POST    /seller/product/stock           controllers.SellerController.getProductStock
PUT     /seller/product/stock           controllers.SellerController.updateStock

# Map for search(/search)
GET     /search/:code/:keyword controllers.SearchController.search(code, keyword, page: Option[Int], size: Option[Int], seq:Option[Int])
GET     /product/detail/:productId       controllers.SearchController.productDetail(productId: Int)

#Map for Category(/category)
GET     /category                       controllers.CategoryController.getMainCategories

# request: categoryCode => response: List[categoryCode, name]
POST     /category/children             controllers.CategoryController.getChildrens
POST    /category/siblings                controllers.CategoryController.getSiblings
